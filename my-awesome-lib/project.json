{
  "name": "my-awesome-lib",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "my-awesome-lib/src",
  "prefix": "lib",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "my-awesome-lib/ng-package.json",
        "tsConfig": "my-awesome-lib/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "my-awesome-lib/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../coverage/my-awesome-lib"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
